<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.angelpina.physiocare.Controllers.RecordController"
      style="-fx-background-color: #f5f5f5; -fx-padding: 30;">
    <Label fx:id="titleLabel" text="Patient Records"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    <Label fx:id="medicalRecordLabel" text="Medical Record: "
           style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;"/>

    <ListView fx:id="appointmentList" prefHeight="400.0" prefWidth="600.0"
              style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;"/>

    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="btnAdd" text="Add Appointment" onAction="#addAppointment"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
        <Button text="Back to Records" onAction="#goBack"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
    </HBox>
</VBox>