<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.angelpina.physiocare.Controllers.PhysiosController"
      style="-fx-background-color: #f5f5f5; -fx-padding: 30;">
    <Label text="Physiotherapists Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <ListView fx:id="physiosList" prefHeight="400.0" prefWidth="600.0"
              style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;"/>

    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="btnAdd" text="Add Physio" onAction="#addPhysio"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
        <Button fx:id="btnSSalary" text="Send Salary" onAction="#SendSalary"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
        <Button text="Back to Title" onAction="#goToTitle"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
    </HBox>
</VBox>